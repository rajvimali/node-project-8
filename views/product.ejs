<%- include('./header.ejs') %>
      <!-- ============================================================== -->
      <!-- End Left Sidebar - style you can find in sidebar.scss  -->
      <!-- ============================================================== -->
      <!-- ============================================================== -->
      <!-- Page wrapper  -->
      <!-- ============================================================== -->
      <div class="page-wrapper py-3 bg-transparent">
        
          <caption align="top"><h2 class="table-title text-center">Add Product-data</h2></caption>
        <form action="/product/create" method="post">
            <table class="table">
                <div class="contianer">

            <tbody class=" col-10 shadow mx-auto p-4">
                <tr>
                    <th scope="row" class="text-center fw-bold">1.</th>
                    <td>
                        <label for="" class="form-label fs-5 me-2 fw-bold">Product Title: </label>
                        <input type="text" class="form-control" name="title" id="" placeholder="Product title">
                    </td>
                </tr>
                <tr>
                    <th scope="row" class="text-center fw-bold">2.</th>
                    <td>
                        <label for="" class="form-label fs-5 me-2 fw-bold">Product Price: </label>
                        <input type="number" class="form-control" name="price" id="" placeholder="Product price">
                    </td>
                </tr>
                <tr>
                    <th scope="row" class="text-center fw-bold">3.</th>
                    <td>
                        <label for="" class="form-label fs-5 me-2 fw-bold">Product Description: </label>
                        <textarea class="form-control" name="description" id="" cols="25" rows="4" placeholder="Product Description"></textarea>
                    </td>
                </tr>
                <tr>
                    <th scope="row" class="text-center fw-bold">4.</th>
                    <td>
                        <label for="" class="form-label fs-5 me-2 fw-bold">Product Image-URL: </label>
                        <input type="url" class="form-control" name="img" id="" placeholder="Product image url">
                    </td>
                </tr>
          
                <tr>
                    <th scope="row" class="text-center fw-bold">5.</th>
                    <td>
                        <label for="" class="form-label fs-5 me-2 fw-bold">Extra Data: </label>
                        <select class="form-control" name="extrCatId" id="" >
                            <% extaradata.map((val)=>{ %>
                                <option value="<%= val._id%>"><%= val.name%> < <%= val.subCategoryId.name%> < <%= val.subCategoryId.categoryId.name%></option>
                            <% }) %>
                        </select>
                        
                    </td>
                </tr>
    
                
                <tr>
                    <th scope="row"></th>
                    <td>
                        <input type="submit" class="btn btn-primary form-control mt-3 ">
                    </td>
                </tr>
            </tbody>
                    </div>

            </table>
        </form>
        <!-- ============================================================== -->
        <!-- Bread crumb and right sidebar toggle -->
        <!-- ============================================================== -->

        <!-- ============================================================== -->
      </div>
      <!-- ============================================================== -->
      <!-- End Page wrapper  -->
      <!-- ============================================================== -->
    </div>
